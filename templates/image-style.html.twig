{#
/**
 * @file
 * Theme override for an image using a specific image style.
 *
 * Available variables:
 * - attributes: HTML attributes for the image, including the following:
 *   - src: Full URL or relative path to the image file.
 *   - class: One or more classes to be applied to the image.
 *   - width: The width of the image (if known).
 *   - height: The height of the image (if known).
 *   - title: The title of the image.
 *   - alt: The alternative text for the image.
 *
 * @see template_preprocess_image_style()
 */
#}
{%
  set classes = [
    'region-image',
  ]
%}
{# Checks for different image styles for the media used by custom blocks #}
{% if style_name == 'card' %}
  <img src="{{ image['#uri'] }}" class="card-img-top" alt="{{ image['#alt'] }}">
{% elseif style_name == 'card_country' %}
  <div class="region-image">
    <img src="{{ image['#uri'] }}" class="card-img" alt="{{ image['#alt'] }}">
  </div>
{% elseif style_name == 'card_wn' %}
  <img src="{{ image['#uri'] }}" class="card-img" alt="{{ image['#alt'] }}">
{% else %}
  {{ image }}
{% endif %}